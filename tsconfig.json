{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2018",
            "esnext.asynciterable"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@*": [ "/*" ],
            "@src": [ "./src/*" ],
            "@styles": [ "./styles/*" ],
            "@tests": [ "./tests/*" ],
            "@pages": [ "./pages/*" ],
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}